# =======================
# BACKEND ENVIRONMENT VARIABLES
# =======================

# Authentication (REQUIRED)
# Generate with: openssl rand -base64 32
AUTH_JWT_SECRET=CHANGE_ME_TO_RANDOM_32_CHAR_STRING

# Admin Bootstrap (REQUIRED - first-time setup only)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Security (REQUIRED)
SECURE_COOKIE=true

# Telegram Notifications (OPTIONAL)
TELEGRAM_BOT_TOKEN=

# CORS Configuration (OPTIONAL - if frontend on different domain)
CORS_ORIGIN=https://app.yourdomain.com

# Database Path (OPTIONAL - default: ./data/lunasentri.db)
DB_PATH=/app/data/lunasentri.db

# =======================
# FRONTEND ENVIRONMENT VARIABLES
# =======================

# Backend API URL (REQUIRED)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
